    <script>
        // JavaScript for the navigation toggle
        document.getElementById('navToggle').addEventListener('click', function() {
            const menu = document.getElementById('navMenu');
            menu.classList.toggle('hidden');
        });

        // Manual scrolling logic for reliable navigation
        // We prevent the default anchor jump and manually scroll to ensure consistency.
        document.querySelectorAll('#navMenu a').forEach(link => {
            link.addEventListener('click', function(e) {
                // 1. Stop the default link behavior
                e.preventDefault(); 
                
                // 2. Get the target section ID from the href attribute
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);

                if (targetElement) {
                    // 3. Use JavaScript to smoothly scroll the target element into view
                    targetElement.scrollIntoView({ behavior: 'smooth' });
                }

                // 4. Close the menu right away
                document.getElementById('navMenu').classList.add('hidden');
            });
        });
    </script>
